
<% @my_reservations.each do |reservation| %>
<h2><%= reservation.restaurant.name %></h2>
  <p><%= reservation.time.to_formatted_s(:long) %></p>
  <p><%= reservation.number_of_people %></p>
<%= link_to "edit", edit_restaurant_reservation_path(reservation.restaurant, reservation), class: "btn btn-primary" %>
<%= link_to "cancel", restaurant_reservation_path(reservation.restaurant, reservation), method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger" %>
<%= reservation.status %>
 <% end %>

